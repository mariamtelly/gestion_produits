{% extends 'base.html.twig' %}

{% block title %} Page d'admin {% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <button class="col-12 btn btn-primary text-center my-5" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" aria-controls="offcanvas">Cliquez ici pour faire apparaître le panneau de navigation</button>
            <h1 class="col-12 text-center mb-5">Catégories de Produits</h1>
            <table class="col-12">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NOM</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                    <tr>
                        <td>{{categorie.id}}</td>
                        <td>{{categorie.nom}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasLabel">Navigation</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="container">
                <div class="row">
                    <ul class="nav flex-column nav-pills">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{path('admin')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{path('admin-liste-categories')}}">Catégories de produits</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('admin-liste-produits')}}">Produits</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('admin-liste-categories-d-articles')}}">Catégories d'articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('admin-liste-articles')}}">Articles</a>
                        </li>
                    </ul>
                </div>
            </div> 
        </div>
    </div>    
{% endblock %}